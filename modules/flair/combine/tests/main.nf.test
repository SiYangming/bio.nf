nextflow_process {
    name "Test Process FLAIR_COMBINE"
    script "../main.nf"
    process "FLAIR_COMBINE"

    tag "modules"
    tag "flair"
    tag "flair/combine"

    test("combine - simple manifest") {
        when {
            process {
                """
                // Create a dummy manifest and inputs
                def bed = file("\${projectDir}/modules/flair/testdata/isoforms.bed", checkIfExists: true)
                
                // We need to construct a manifest file that points to the staged file name
                def manifest_content = "sample1\\tisoform\\t\${bed.name}"
                def manifest = file("manifest.txt")
                manifest.text = manifest_content
                
                input[0] = [ 
                    [ id:'test' ], 
                    manifest,
                    [bed]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
