nextflow_process {

    name "Test Process FLAIR_PREDICTPRODUCTIVITY"
    script "../main.nf"
    process "FLAIR_PREDICTPRODUCTIVITY"

    tag "modules"
    tag "flair"
    tag "flair/predictproductivity"

    test("predictproductivity - bed, gtf, fasta") {
        
        when {
            process {
                """
                def bed = file("\${projectDir}/modules/flair/testdata/test-collapse-annot.isoforms.bed", checkIfExists: true)
                def gtf = file("\${projectDir}/modules/flair/testdata/basic.annotation.gtf", checkIfExists: true)
                def fasta = file("\${projectDir}/modules/flair/testdata/genome.fa", checkIfExists: true)

                input[0] = [ 
                    [ id:'test', single_end:false ], 
                    bed,
                    gtf,
                    fasta
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
