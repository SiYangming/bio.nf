nextflow_process {

    name "Test Process FLAIR_MARKINTRONRETENTION"
    script "../main.nf"
    process "FLAIR_MARKINTRONRETENTION"

    tag "modules"
    tag "flair"
    tag "flair/markintronretention"

    test("markintronretention - bed") {
        
        when {
            process {
                """
                def bed = file("\${projectDir}/modules/flair/testdata/partition-test.bed", checkIfExists: true)

                input[0] = [ 
                    [ id:'test', single_end:false ], 
                    bed
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
